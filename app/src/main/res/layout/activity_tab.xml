<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/ll_tab"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_tab">

            <include layout="@layout/layout_line"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_tab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <RadioGroup
                android:id="@+id/rg_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_publish"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/publish1"
                    android:textSize="@dimen/font5"
                    android:text="发布"
                    android:gravity="center"
                    android:textColor="@drawable/bottom_tv_color"/>
                <RadioButton
                    android:id="@+id/rb_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/publish1"
                    android:text="分类"
                    android:textSize="@dimen/font5"
                    android:gravity="center"
                    android:textColor="@drawable/bottom_tv_color"/>
                <RadioButton
                    android:id="@+id/rb_home"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/publish1"
                    android:text="主页"
                    android:textSize="@dimen/font5"
                    android:gravity="center"
                    android:textColor="@drawable/bottom_tv_color"/>
                <RadioButton
                    android:id="@+id/rb_msg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/publish1"
                    android:text="消息"
                    android:textSize="@dimen/font5"
                    android:gravity="center"
                    android:textColor="@drawable/bottom_tv_color"/>
                <RadioButton
                    android:id="@+id/rb_me"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/me1"
                    android:text="我的"
                    android:textSize="@dimen/font5"
                    android:textColor="@drawable/bottom_tv_color"
                    android:gravity="center"/>
            </RadioGroup>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>